import java.util.Scanner;

public class BuscarCentroCadena01 {

	public static void main(String[] args) {
		
		Scanner in = new Scanner (System.in);
				
		System.out.println("Introduce una cadena de texto: ");
		String cadena = in.next();
		
		encontrarCentral(cadena);
		
		in.close();
		
	}
	
	public static void encontrarCentral(String cadena) {
		
		int longitud = cadena.length();	
		int centro = longitud / 2;
		
		char charCentral = cadena.charAt(centro);
		
		System.out.println("En '" + cadena + "', el caracter central es: " + charCentral); 
		
		for (int i=0; i<centro -2; i++) {
			
			System.out.print(cadena.charAt(i) + ", ");
			
		}
		
		System.out.print(cadena.charAt(centro - 2) + " y " + cadena.charAt(centro - 1) + " están a la izquierda.");
		
		System.out.println("");
		
		for (int i=centro + 1; i<cadena.length() - 2; i++) {
					
					System.out.print(cadena.charAt(i) + ", ");
					
				}
				
				System.out.print(cadena.charAt((cadena.length() - 2)) + " y " + cadena.charAt(cadena.length() - 1) + " están a la izquierda.");
		
	}
	
}
